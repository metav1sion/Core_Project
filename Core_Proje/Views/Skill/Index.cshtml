@model List<EntityLayer.Concrete.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
        <tr>
            <th scope="col" class="sort" data-sort="name">#</th>
            <th scope="col" class="sort" data-sort="budget">Yetenek Adı</th>
            <th scope="col" class="sort" data-sort="status">Yetenek Oranı</th>
            <th scope="col" class="sort" data-sort="status">Statü</th>
            <th scope="col" class="sort" data-sort="completion">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
        </thead>
        <tbody class="list">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SkillID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <span class="completion mr-2">@item.Value%</span>
                        <div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <span class="badge badge-dot mr-4">
                        <i class="bg-success"></i>
                        <span class="status">Görüntüleniyor</span>
                    </span>
                </td>
                <td>
                    <a href="#" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="#" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br/>
    <a href="#" class="btn btn-primary">Yeni Yetenek Ekle</a>
</div>
